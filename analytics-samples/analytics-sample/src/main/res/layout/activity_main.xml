<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:orientation="vertical"
      tools:context="com.sweetpricing.dynamicpricing.sample.MainActivity">


      <Button
          android:id="@+id/action_get_sku"
          android:text="@string/get_sku"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/current_sku" />

    <EditText
        android:id="@+id/action_track_purchase_product_id"
        android:hint="@string/product_id_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <Button
        android:id="@+id/action_track_purchase"
        android:text="@string/track_button_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </LinearLayout>

</ScrollView>
